<div class='container'>

<h1>Listings</h1>

<div id="listings">
  <% @listings.each do |listing| %>
    <%= render listing %>
    <p>
      <%= link_to "Show this listing", listing %>
    </p>
  <% end %>
</div>

<%= link_to "New listing", new_listing_path %>
</div>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Label</th>
            <th>Condition</th>
            <th>Price</th>
            <th>Genre</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @listings.each do |listing| %>
            <tr>
                <td><%= listing.title %></td>
                <td><%= listing.artist %></td>
                <td><%= listing.label %></td>
                <td><%= listing.condition %></td>
                <td><%= listing.price %></td>
                <td><%= listing.genre.name %></td>
            </tr>
        <% end %>
    </tbody>
</table>