<p id="notice"><%= notice %></p>


  <div class="row lg-12 md-12 m-2 p-2">
    <% @listings.each do |listing| %>
    <div class="col lg-4 md-4">
      
      <div class="card">
        <% if listing.cover.attached? %>
        <%= image_tag listing.cover, alt: listing.title, class:"card-img-top ratio ratio-1x1", width:"auto", height:"auto"  %>
        <% else %>
        <%= image_tag "cover_fallback.svg", alt: listing.title, class:"card-img-top ratio ratio-1x13", width:"auto", height:"auto"  %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%=listing.title%></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%=listing.artist%></h6>
            <p class="card-text mt-2"><%=listing.description %></p>
            <p class="card-text">
            <p class="card-text mt-2">
            <p class="card-text mt-2">
              <strong>Genre:</strong>
              <%= listing.genre.name %>
            </p>
            <small class="text-muted">Seller: <%=listing.label%></small></p>
            <%=link_to "Buy Now - $#{listing.price}", listing, class: "btn btn-success"%>
            
        </div>
      </div>
         
    </div>
   <% end %>
  </div>

</div>
